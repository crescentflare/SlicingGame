{
  "viewlet": "linearContainer",
  "items": [
    {
      "refId": "statusUnderlay",
      "viewlet": "view",
      "width": "stretchToParent"
    },
    {
      "refId": "content",
      "viewlet": "linearContainer",
      "orientation": "horizontal",
      "width": "stretchToParent",
      "items": [
        {
          "refId": "menuIconContainer",
          "viewlet": "frameContainer",
          "height": "stretchToParent",
          "visibility": "hidden",
          "items": [
            {
              "refId": "menuIcon",
              "viewlet": "imageButton",
              "width": "stretchToParent",
              "height": "stretchToParent"
            }
          ]
        },
        {
          "refId": "title",
          "viewlet": "text",
          "weight": 1,
          "paddingLeft": 16,
          "paddingRight": 16,
          "gravity": "centerVertical",
          "maxLines": 1,
          "textSize": "$titleText"
        },
        {
          "refId": "actionIconContainer",
          "viewlet": "frameContainer",
          "height": "stretchToParent",
          "visibility": "hidden",
          "items": [
            {
              "refId": "actionIcon",
              "viewlet": "imageButton",
              "width": "stretchToParent",
              "height": "stretchToParent"
            }
          ]
        }
      ]
    },
    {
      "refId": "divider",
      "viewlet": "view",
      "width": "stretchToParent",
      "height": 2,
      "backgroundColor": "#4000",
      "visibility": "hidden"
    }
  ]
}