{
  "modules": [
    {
      "module": "alert"
    }
  ],
  "dataSets": {
    "layout": {
      "viewlet": "pageContainer",
      "titleBar": {
        "viewlet": "gameTitleBar",
        "width": "stretchToParent",
        "backgroundColor": "#fff",
        "localizedTitle": "GLOBAL_APP_NAME",
        "showDivider": true
      },
      "bottomBar": {
        "viewlet": "simpleBottomBar",
        "width": "stretchToParent",
        "backgroundColor": "#ddd"
      },
      "backgroundItem": {
        "viewlet": "view",
        "width": "stretchToParent",
        "height": "stretchToParent",
        "backgroundColor": "#fff"
      },
      "contentItems": [
        {
          "viewlet": "gameContainer",
          "width": "stretchToParent",
          "height": "stretchToParent",
          "backgroundColor": "#ddd",
          "levelWidth": 12,
          "levelHeight": 16,
          "requireClearRate": 75,
          "clearEvent": "alert://simple?localizedTitle=GAME_COMPLETE_LEVEL_TITLE&localizedText=GAME_COMPLETE_LEVEL_TEXT&localizedActionText=ALERT_OK",
          "backgroundImage": "app://background_level_starry_night"
        },
        {
          "viewlet": "imageButton",
          "horizontalGravity": "right",
          "marginTop": "$pagePadding",
          "marginRight": "$pagePadding",
          "padding": [ 16, 16, 16, 16 ],
          "backgroundColor": "#8000",
          "source": "app://icon_game_restart",
          "highlightedColorize": "#8fff",
          "disabledColorize": "#4fff",
          "tapEvent": "alert://simple?text=TODO:+implement+game+restart+button"
        }
      ]
    }
  }
}
