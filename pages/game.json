{
  "modules": [
    {
      "module": "alert"
    }
  ],
  "dataSets": {
    "layout": {
      "viewlet": "pageContainer",
      "titleBar": {
        "viewlet": "gameTitleBar",
        "width": "stretchToParent",
        "backgroundColor": "#fff",
        "localizedTitle": "GLOBAL_APP_NAME",
        "actionIcon": "app://icon_game_restart",
        "actionEvent": "game://reset",
        "showDivider": true
      },
      "bottomBar": {
        "viewlet": "simpleBottomBar",
        "width": "stretchToParent",
        "backgroundColor": "#ddd"
      },
      "backgroundItem": {
        "viewlet": "view",
        "width": "stretchToParent",
        "height": "stretchToParent",
        "backgroundColor": "#fff"
      },
      "contentItems": [
        {
          "viewlet": "spriteContainer",
          "gridWidth": 12,
          "gridHeight": 16,
          "margin": [ "$pagePadding", "$pagePadding", "$pagePadding", "$pagePadding" ],
          "gravity": "center",
          "backgroundColor": "#ddd",
          "sprites": [
            {
              "x": 0,
              "y": 0,
              "width": 1,
              "height": 1
            },
            {
              "x": 4,
              "y": 2,
              "width": 2,
              "height": 2
            }
          ]
        }
      ]
    }
  }
}
